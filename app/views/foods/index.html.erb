<p style="color: green"><%= notice %></p>

<h2>Food</h2>
<table id="food_table" class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Jenis</th>
      <th>Origin</th>
      <th>Kategori</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @foods.each do |food| %>
      <tr>
        <td><%= food.name %></td>
        <td><%= food.jenis %></td>
        <td><%= food.origin %></td> 
        <td>
          <div class="btn-group" role="group" aria-label="Basic outlined example">
            <%= link_to 'Show', food_path(food), class:'btn btn-info' %>
            <%= link_to 'Edit', edit_food_path(food), class:'btn btn-warning' %>
            <%= button_to 'Destroy', food_path(food), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>

<br>

<%= link_to 'New food', new_food_path, class:"btn btn-primary" %>




