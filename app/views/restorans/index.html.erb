<p style="color: green"><%= notice %></p>

<h2>Restoran</h2>

<table class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Alamat</th>
      <th>City</th>
      <th>phone</th>
      <th>Image</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @restorans.each do |restoran| %>
      <tr>
        <td><%= restoran.name %></td>
        <td><%= restoran.alamat %></td>
        <td><%= restoran.city %></td> 
        <td><%= restoran.phone %></td> 
        <td><%= image_tag(restoran.image.url, :size => "100x100", alt: 'Image') if restoran.image? %></td>
        <%# <td><%= restoran.user.try(:email) %></td>
            <td><%= link_to 'Show', restoran_path(restoran), class:'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_restoran_path(restoran), class:'btn btn-warning' %></td>
            <td><%= button_to 'Destroy', restoran_path(restoran), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %></td>
        
      </tr>
    <% end %>
  <tbody>
</table>

<br>

<%= link_to 'New Restaurant', new_restoran_path, class:"btn btn-primary" %>

