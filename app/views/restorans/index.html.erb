<p style="color: green"><%= notice %></p>

<h2>Restorans</h2>

<table id="restoran_table" class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Alamat</th>
      <th>City</th>
      <th>phone</th>
      <th>Image</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @restorans.each do |restoran| %>
      <tr>
        <td style="text-align: center; vertical-align: middle;"><%= restoran.name %></td>
        <td style="text-align: center; vertical-align: middle;"><%= restoran.alamat %></td>
        <td style="text-align: center; vertical-align: middle;"><%= restoran.city %></td> 
        <td style="text-align: center; vertical-align: middle;"><%= restoran.phone %></td> 
        <td style="text-align: center; display:block;"><%= image_tag(restoran.image.url, :size => "100x100", alt: 'Image',class:"rounded-pill") if restoran.image? %></td>
        <td style="text-align: center; vertical-align: middle;" class="align-middle">
          <div class="btn-group " role="group" aria-label="Basic outlined example">
            <%= link_to 'Show', restoran_path(restoran), class:'btn btn-info'%>
            <%= link_to 'Edit', edit_restoran_path(restoran), class:'btn btn-warning' %>
            <%= button_to 'Destroy', restoran_path(restoran), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'%>
          </div>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>
<br>







