<p style="color: green"><%= notice %></p>

<h2>Menu</h2>
<table id="kategori_table" class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th style="text-align: center; vertical-align: middle;">Name</th>
      <th style="text-align: center; vertical-align: middle;">Jenis</th>
      <th style="text-align: center; vertical-align: middle;">Origin</th>
      <%# <th>Cretatory</th> %>
      <th style="text-align: center; vertical-align: middle;">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @kategoris.each do |kategori| %>
      <tr>
        <td style="text-align: center; vertical-align: middle;"><%= kategori.name %></td>
        <td style="text-align: center; vertical-align: middle;"><%= kategori.jenis %></td>
        <td style="text-align: center; vertical-align: middle;"><%= kategori.origin %></td> 
        <td style="text-align: center; vertical-align: middle;">
          <div class="btn-group" role="group" aria-label="Basic outlined example">
            <%= link_to 'Show', kategori_path(kategori), class:'btn btn-info' %> 
            <%= link_to 'Edit', edit_kategori_path(kategori), class:'btn btn-warning' %>
            <%= button_to 'Destroy', kategori_path(kategori), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>

<br>

<%= link_to 'New kategori', new_kategori_path, class:"btn btn-primary" %>



