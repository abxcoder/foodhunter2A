<p style="color: green"><%= notice %></p>

<h2>Menu</h2>
<table id="kategori_table" class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Jenis</th>
      <th>Origin</th>
      <%# <th>Cretatory</th> %>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @kategoris.each do |kategori| %>
      <tr>
        <td><%= kategori.name %></td>
        <td><%= kategori.jenis %></td>
        <td><%= kategori.origin %></td> 
        <td>
          <div class="btn-group" role="group" aria-label="Basic outlined example">
            <%= link_to 'Show', kategori_path(kategori), class:'btn btn-info' %> 
            <%= link_to 'Edit', edit_kategori_path(kategori), class:'btn btn-warning' %>
            <%= button_to 'Destroy', kategori_path(kategori), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  <tbody>
</table>

<br>

<%= link_to 'New kategori', new_kategori_path, class:"btn btn-primary" %>



