
<p style="color: green"><%= notice %></p>

<h2>Person</h2>
<table class="table table-bordered table-striped table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Email</th>
      <th>User</th>
      <th>Premium</th>
      <th>Admin</th>
      <th colspan="3">Change Role</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.user %></td>
        <td><%= user.premium %></td>
        <td><%= user.admin %></td>
            <td><%= link_to 'Detail', api_v1_detail_member_path(user), class:'btn btn-info' %></td>
            <td><%= link_to 'Edit', edit_member_path(user), class:'btn btn-warning' %></td>
            <td><%= link_to 'Destroy', destroy_member_path(user), method: :get, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger'%></td>
      </tr>
    <% end %>
  <tbody>
</table>

<br>

<%= link_to 'New Person', create_member_path, class:"btn btn-primary" %>

